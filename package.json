  "description": "This is a backend project for mediaplayhub project. Node js platform and typescript and javascript is used here.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "build": "tsc --build",
    "serve": "node --env-file=.env --env-file=.env.development.local dist/server.js",
